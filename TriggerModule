/* Trigger syntax*/
trigger TriggerName on ObjectName(trigger_events) {
code_block
}

// Options

    before insert
    before update
    before delete
    after insert
    after update
    after delete
    after undelete

// An example:

trigger HelloWorldTrigger on Account (before insert) {
	System.debug('Hello World!');
}

// Another Example

trigger HelloWorldTrigger on Account (before insert) {
    for(Account a : Trigger.New) {
        a.Description = 'New description';
    }
}


